{{!
    @template core/html_table

    Moodle html_table template.

    The purpose of this template is to render a html_table.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * id            (optional) id attribute for the table.
    * classes       (optional) CSS classes as a space-separated list.
    * attributes    (optional) Array of name / value pairs. The value
                    can be omitted for shorthand attributes.
    * head          (optional) An object that contains an array called
                    rows, which consists of objects with context
                    variables required by the core/html_table_row
                    template.
    * body          (optional) An object that contains an array called
                    rows, which consists of objects with context
                    variables required by the core/html_table_row
                    template.
    * foot          (optional) An object that contains an array called
                    rows, which consists of objects with context
                    variables required by the core/html_table_row
                    template.

    Example context (json):
    {
        "classes": "generaltable",
        "head": {
            "rows": [
                {
                    "classes": "",
                    "cells": [
                        {
                            "text": "Name",
                            "type": "th",
                            "classes": "",
                            "attributes": [
                                { "name": "class", "value": "mytableheadercell" }
                            ]
                        },
                        {
                            "text": "Value",
                            "classes": "",
                            "attributes": [
                                { "name": "class", "value": "mytablecell" }
                            ]
                        }
                    ]
                }
            ]
        },
        "body": {
            "rows": [
                {
                    "classes": "",
                    "cells": [
                        {
                            "text": "Jetha",
                            "type": "th",
                            "classes": "",
                            "attributes": [
                                { "name": "class", "value": "mytableheadercell" }
                            ]
                        },
                        {
                            "text": "2",
                            "classes": "",
                            "attributes": [
                                { "name": "class", "value": "mytablecell" }
                            ]
                        }
                    ]
                },
                {
                    "classes": "",
                    "cells": [
                        {
                            "text": "Dave",
                            "type": "th",
                            "classes": "",
                            "attributes": [
                                { "name": "class", "value": "mytableheadercell" }
                            ]
                        },
                        {
                            "text": "0",
                            "classes": "",
                            "attributes": [
                                { "name": "class", "value": "mytablecell" }
                            ]
                        }
                    ]
                }
            ]
        },
        "foot": {
            "rows": [
                {
                    "classes": "",
                    "cells": [
                        {
                            "text": "Name",
                            "type": "th",
                            "classes": "",
                            "attributes": [
                                { "name": "class", "value": "mytableheadercell" }
                            ]
                        },
                        {
                            "text": "Value",
                            "classes": "",
                            "attributes": [
                                { "name": "class", "value": "mytablecell" }
                            ]
                        }
                    ]
                }
            ]
        }
    }

}}
<table {{#id}}id="{{id}}"{{/id}} {{#classes}}class="{{classes}}"{{/classes}}{{#attributes}} {{{name}}}{{#value}}="{{value}}"{{/value}}{{/attributes}}>
    {{#caption}}<caption {{#captionhide}}class="accesshide"{{/captionhide}}>{{caption}}</caption>{{/caption}}
    {{#head}}
    <thead>
    {{#rows}}
    {{> core/html_table_row}}
    {{/rows}}
    </thead>
    {{/head}}
    {{#body}}
    <tbody>
    {{#rows}}
    {{> core/html_table_row}}
    {{/rows}}
    </tbody>
    {{/body}}
    {{#foot}}
    <tfoot>
    {{#rows}}
    {{> core/html_table_row}}
    {{/rows}}
    </tfoot>
    {{/foot}}
</table>